{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"declaration": true,
		"declarationMap": true,
		"rootDir": "src",
		"jsx": "react-jsx",
		"strict": true,
		"outDir": "./dist", // Should match Vite's build dir
		"baseUrl": "src",
		"paths": {
			"@main": ["index.ts"],
			"@utils": ["utils/index.ts"],
			"@components": ["components/index.ts"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
