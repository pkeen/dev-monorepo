{
	"compilerOptions": {
		"rootDir": "./src",
		"target": "ES2019",
		"module": "ESNext",
		"moduleResolution": "Node",
		"declaration": true,
		"declarationMap": true,
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"skipLibCheck": true,
		"paths": {
			"@main": ["index.ts"],
			"@actions/*": ["actions/*"],
			"@utils": ["utils/index.ts"],
			"@utils/*": ["utils/*"],
			"@context/*": ["context/*"],
			"@api/*": ["api/*"],
			"@db/*": ["db/*"],
			"@client/*": ["client/*"],
			"@config": ["config/index.ts"],
			"@config/*": ["config/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/node_modules/*"]
}
